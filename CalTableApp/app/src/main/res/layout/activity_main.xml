<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow>
        <EditText
            android:id="@+id/edit1"
            android:layout_span="5"
            android:hint="숫자입력1"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/edit2"
            android:layout_span="5"
            android:hint="숫자입력2"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnNum0"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnNum1"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnNum2"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnNum3"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnNum4"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnNum5"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnNum6"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnNum7"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnNum8"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/btnNum9"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/add"
            android:text="Add"
            android:textSize="30dp"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/sub"
            android:text="Sub"
            android:textSize="30dp"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/mul"
            android:text="Mul"
            android:textSize="30dp"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/div"
            android:text="Div"
            android:textSize="30dp"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/txResult"
            android:text="계산결과"
            android:textSize="30dp"
            android:textColor="#f00"
            android:layout_span="5"/>
    </TableRow>

</TableLayout>